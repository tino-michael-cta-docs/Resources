    \IfStrEq{#1}{true}{
        \newcounter{finalframe}
        \setcounter{finalframe}{\value{framenumber}}

        \begin{frame}
            \centering
            \Huge Backup\\
        \end{frame}

        #2

        \setcounter{framenumber}{\value{finalframe}}
    }{}
}%



